@model StudentFormApp.Models.StudentModel

<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Standard" class="form-label"></label>
        <input asp-for="Standard" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="RollNumber" class="form-label"></label>
        <input asp-for="RollNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>
