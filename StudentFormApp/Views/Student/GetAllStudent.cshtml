@model List<StudentFormApp.Models.StudentModel>

<h2>Student List</h2>
<a class="btn btn-primary mb-3" href="/Student/DisplayForm">+ Add Student</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Standard</th>
            <th>Roll</th>
            <th>Email</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Standard</td>
                <td>@student.RollNumber</td>
                <td>@student.Email</td>
                <td>@student.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
